{
    "name": "x-graphql/http-schema",
    "description": "Building GraphQL schema over HTTP (aka remote schema)",
    "type": "library",
    "require-dev": {
        "guzzlehttp/promises": "^2.0",
        "nyholm/psr7": "^1.8",
        "phpunit/phpunit": "^11.0",
        "symfony/cache": "^7.0",
        "symfony/http-client": "^7.0",
        "symplify/easy-coding-standard": "^12.1"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "XGraphQL\\HttpSchema\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "XGraphQL\\HttpSchema\\Test\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.2",
        "php-http/discovery": "^1.19",
        "php-http/httplug": "^2.4",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^2.0",
        "psr/simple-cache": "^2.0 || ^3.0",
        "webonyx/graphql-php": "^15.9",
        "x-graphql/delegate-execution": "^0.4.0",
        "x-graphql/utils": ">=0.1.0"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": false
        }
    }
}
